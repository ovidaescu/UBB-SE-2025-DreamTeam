<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Marketplace_SE.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marketplace_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter username:" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="10"
           />
            <TextBox x:ConnectionId='2' PlaceholderText="" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
         Width="200"
         x:Name="LineEditUsername"/>
            <TextBlock Text="Enter password:" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="10"
           />
            <TextBox x:ConnectionId='3' PlaceholderText="" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
         Width="200"
         x:Name="LineEditPassword"/>
            <TextBlock x:ConnectionId='4' Text="Wrong username or password!" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="10"
           x:Name="TextBlockWrong"/>
            <Button x:ConnectionId='5' Content="Login" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Width="200" 
        Height="50" 
                                  
        x:Name="ButtonLogin"/>
            <Button x:ConnectionId='6' Content="Register" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Width="200" 
        Height="50" 
                                     
        x:Name="ButtonRegister"/>
            <Button x:ConnectionId='7' Content="Reset password" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Width="200" 
        Height="50" 
                                          
        x:Name="ButtonResetPassword"/>
        </StackPanel>
    </Grid>
</Page>

