<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Marketplace_SE.ViewHelpTicket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marketplace_SE"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock x:ConnectionId='2' Text="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockViewHelpTicketNumber"/>
            <TextBlock x:ConnectionId='3' Text="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockViewHelpTicketUserID"/>
            <TextBlock x:ConnectionId='4' Text="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockViewHelpTicketUserName"/>
            <TextBlock x:ConnectionId='5' Text="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockViewHelpTicketDateAndTime"/>
            <TextBlock Text="Description:" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox x:ConnectionId='6' Text="" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" 
             Width="250"
                                                                        
             x:Name="TextBoxViewHelpTicketDescription"/>
            <TextBlock x:ConnectionId='7' Text="" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockViewHelpTicketClosed"/>
            <TextBlock x:ConnectionId='8' Text="Description modification failed! Retry" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" x:Name="TextBlockViewHelpTicketDescriptionModificationFailed"/>
            <TextBlock x:ConnectionId='9' Text="Description modification succeeded!" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" x:Name="TextBlockViewHelpTicketDescriptionModificationSucceeded"/>
            <TextBlock x:ConnectionId='10' Text="Ticket closure failed! Retry" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" x:Name="TextBlockViewHelpTicketTicketClosureFailed"/>
            <TextBlock x:ConnectionId='11' Text="Ticket closure succeeded!" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" x:Name="TextBlockViewHelpTicketTicketClosureSucceeded"/>
            <Button x:ConnectionId='12' Content="Close ticket" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="250" 
                            Height="50" 
                            Visibility="Collapsed"
                                                                          
                            x:Name="ButtonViewHelpTicketCloseTicket"/>
            <Button x:ConnectionId='13' Content="Save description modifications" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="250" 
                            Height="50" 
                            Visibility="Collapsed"
                                                                                           
                            x:Name="ButtonViewHelpTicketSaveDescriptionModifications"/>
            <Button x:ConnectionId='14' Content="Return" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="250" 
                            Height="50" 
                                                                                           
                            x:Name="ButtonNavigateViewHelpTicketPageAdminAccountPage"/>
        </StackPanel>
    </Grid>
</Page>

