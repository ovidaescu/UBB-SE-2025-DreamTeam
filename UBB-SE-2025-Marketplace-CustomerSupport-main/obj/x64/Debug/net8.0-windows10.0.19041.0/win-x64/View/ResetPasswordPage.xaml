<Page
    x:Class="Marketplace_SE.ResetPasswordPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="Enter a new password:" />
            <PasswordBox x:ConnectionId='2' x:Name="NewPasswordBox" Width="200"                                                 />
            <TextBlock x:ConnectionId='3' x:Name="RequirementsText" Foreground="Gray" FontSize="12"/>
            <ProgressBar x:ConnectionId='4' x:Name="StrengthBar" Minimum="0" Maximum="3" Height="10" Width="200"/>

            <TextBlock Text="Confirm new password:" />
            <PasswordBox x:ConnectionId='5' x:Name="ConfirmPasswordBox" Width="200" />

            <Button x:ConnectionId='6' Content="Submit"                      />
        </StackPanel>
    </Grid>
</Page>

