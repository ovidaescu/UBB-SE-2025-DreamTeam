<Page
    x:Class="Marketplace_SE.EnterIdPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Button x:ConnectionId='2' Content="← Back"                   
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="Enter your account ID:" />
            <TextBox x:ConnectionId='3' x:Name="IdInputBox" Width="200" PlaceholderText="Account ID" />
            <Button x:ConnectionId='4' Content="Next"                        />
        </StackPanel>
    </Grid>
</Page>

