<Page
    x:Class="Marketplace_SE.EnterIdPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Button Content="← Back" Click="Back_Click"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="10" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
            <TextBlock Text="Enter your account ID:" />
            <TextBox x:Name="IdInputBox" Width="200" PlaceholderText="Account ID" />
            <Button Content="Next" Click="Continue_Click" />
        </StackPanel>
    </Grid>
</Page>