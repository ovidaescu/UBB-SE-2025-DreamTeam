<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Marketplace_SE.GetHelpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marketplace_SE"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button Content="Ask our chatbot for help" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="300" 
            Height="50" 
            Click="OnButtonClickOpenChatbotConversation"
            x:Name="ButtonOpenChatbotConversation"/>
            <Button Content="Get in touch with Customer Support" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="300" 
            Height="50" 
            Click="OnButtonClickOpenCSConversation"
            x:Name="ButtonOpenCSConversation"/>
            <Button Content="Return to marketplace" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Width="300" 
            Height="50" 
            Click="OnButtonClickNavigateGetHelpPageMainMarketplacePage"
            x:Name="ButtonNavigateGetHelpPageMainMarketplacePage"/>
        </StackPanel>
    </Grid>
</Page>
