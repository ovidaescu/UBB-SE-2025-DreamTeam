<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Marketplace_SE.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marketplace_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter username:" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="10"
           />
            <TextBox PlaceholderText="" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
         Width="200"
         x:Name="LineEditUsername"/>
            <TextBlock Text="Enter password:" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="10"
           />
            <TextBox PlaceholderText="" 
         HorizontalAlignment="Center" 
         VerticalAlignment="Center" 
         Width="200"
         x:Name="LineEditPassword"/>
            <TextBlock Text="Wrong username or password!" 
           HorizontalAlignment="Center" 
           VerticalAlignment="Center" 
           Margin="10"
           x:Name="TextBlockWrong"/>
            <Button Content="Login" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Width="200" 
        Height="50" 
        Click="OnButtonClickLogin"
        x:Name="ButtonLogin"/>
            <Button Content="Register" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Width="200" 
        Height="50" 
        Click="OnButtonClickRegister"
        x:Name="ButtonRegister"/>
            <Button Content="Reset password" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Width="200" 
        Height="50" 
        Click="OnButtonClickResetPassword"
        x:Name="ButtonResetPassword"/>
        </StackPanel>
    </Grid>
</Page>
